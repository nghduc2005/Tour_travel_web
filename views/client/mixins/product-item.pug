mixin product-item(item)
  // Product Item
  .product-item
    .inner-image
      a(href=`/tour/detail/${item.slug}`)
        img(
          alt="" 
          src=item.avatar
          )
    .inner-discount
      i.fa-solid.fa-bolt
      | Giảm -#{item.discount}%
    .inner-content
      h3.inner-title
        a(href=`/tour/detail/${item.slug}`) #{item.name}
      .inner-prices
        .inner-price-old
          | #{item.priceAdult.toLocaleString('vi-VN')}
          span.inner-unit đ
        .inner-price-new
          | #{item.priceNewAdult.toLocaleString('vi-VN')}
          span.inner-unit đ
      .inner-desc
        //- .inner-desc-item
        //-   | Mã Tour:
        //-   b 123456789
        .inner-desc-item
          | Ngày Khởi Hành:
          b #{item.departureDateFormat}
        .inner-desc-item
          | Thời Gian:
          b #{item.time}
      .inner-meta
        //- .inner-rating
        //-   .inner-stars
        //-     - for(let i = 1; i <= item.ratingStars; i++)
        //-       i.fa-solid.fa-star
        //-     - for(let j = item.ratingStars + 1; j <= 5; j++)
        //-       i.fa-regular.fa-star
        //-   .inner-number (#{item.ratingTotal})
        .inner-stock
          .inner-label Số chỗ còn:
          .inner-number #{item.stockAdult}
  // End Product Item