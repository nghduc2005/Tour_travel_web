mixin breadcrumb(breadcrumb)
  // Breadcrumb
  .box-breadcrumb
    .inner-image
      img(
        alt="" 
        src=breadcrumb.avatar
        )
    .inner-content
      .container
        h1.inner-title #{breadcrumb.title}
        .inner-list
          each item in breadcrumb.list
            a(href=item.link) #{item.title}
  // End Breadcrumb