extends ../layouts/default.pug
block main
  // Section 4
  .section-4(style="padding-top: 60px;")
    .container
      h2.box-title Thông tin liên hệ
        .wrapper-contact
          .box-contact-info
            h3 Thông tin công ty
            p Địa chỉ email: #{settingWebsiteInfo.email}
            p Số điện thoại: #{settingWebsiteInfo.phone.replace(/(\d{4})(\d{3})(\d{3})/, "$1.$2.$3")}
            p Trụ sở chính: #{settingWebsiteInfo.address}
            iframe(
            referrerpolicy="no-referrer-when-downgrade" 
            loading="lazy" 
            style="border:0;" 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d55708.55273502247!2d105.79567800564611!3d21.02273461907497!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab9bd9861ca1%3A0xe7887f7b72ca17a9!2zSMOgIE7hu5lpLCBWaeG7h3QgTmFt!5e1!3m2!1svi!2s!4v1756797818085!5m2!1svi!2s"
            )
          .box-contact-to-us 
            h3 Liên hệ với chúng tôi
            form(class="contact-to-us" id="contact-to-us") 
              .item-contact 
                label(for="fullName") Họ và tên:
                input(type="text" name="fullName" id="fullName" placeholder="Nguyen Van A" class="fullName")
              .item-contact 
                label(for="email") Email:
                input(type="email" name="email" id="email" placeholder="abc@gmail.com" class="email")
              .item-contact.content-contact
                label(for="content") Nội dung:
                textarea(name="content" id="content" rows='8' class="content") 
              button(class="submit-contact") Gửi
