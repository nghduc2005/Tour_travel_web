extends ../layouts/default.pug


block main
  h1.box-title Tài khoản quản trị

  //- Section 4
  .section-4
    .inner-wrap
      .inner-item.inner-label
        <i class="fa-solid fa-filter"></i> Bộ lọc
      .inner-item
        select(filter-status)
          option(value="") Trạng thái
          option(value="active") Hoạt động
          option(value="inactive") Tạm dừng
      .inner-item.inner-date
        input(type="date" filter-start-date)
        span -
        input(type="date" filter-end-date)
      .inner-item
        select(filter-role)
          option(value="") Nhóm quyền
          each item in roleList 
            option(value=item.id) #{item.name}
      .inner-item.inner-reset(filter-reset)
        <i class="fa-solid fa-rotate-left"></i> Xóa bộ lọc
  //- End Section 4

  //- Section 5
  .section-5
    .inner-wrap
      .inner-change-status(
        change-multi
        data-api = `/${pathAdmin}/setting/account-admin/change-multi`
      )
        .inner-item
          select
            option(value="") -- Hành động --
            option(value="active") Hoạt động
            option(value="inactive") Dừng hoạt động
            option(value="delete") Xóa
        .inner-item
          button Áp dụng
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(type="text" placeholder="Tìm kiếm" search)
      .inner-button-create
        a(href=`/${pathAdmin}/setting/account-admin/create`) + Tạo mới
  //- End Section 5

  //- Section 6
  .section-6
    .table-2
      table
        thead
          tr
            th(class="inner-center")
              input(type="checkbox" class="inner-check" check-all)
            th Họ tên
            th(class="inner-center") Ảnh đại diện
            th Email
            th Số điện thoại
            th Nhóm quyền
            th Chức vụ
            th Trạng thái
            th Hành động
        tbody
          each item in accountAdminList
            tr
              td(class="inner-center")
                input(type="checkbox" class="inner-check" check-item=item._id)
              td #{item.fullName}
              td(class="inner-center")
                img(src=item.avatar class="inner-avatar")
              td #{item.email}
              td #{item.phone}
              td #{item.roleName}
              td #{item.positionCompany}
              td
                .badge.badge-green #{item.status=='active' ? 'Hoạt động' : 'Dừng hoạt động'}
              td
                .inner-buttons
                  a(
                    class="inner-edit"
                    href=`/${pathAdmin}/setting/account-admin/edit/${item._id}`
                  ) <i class="fa-regular fa-pen-to-square"></i>
                  button(class="inner-delete") <i class="fa-regular fa-trash-can"></i>
  //- End Section 6

  //- Section 7
  .section-7
    span(class="inner-label") Hiển thị #{pagination.skip+1} - #{pagination.skip+accountAdminList.length} của #{pagination.totalRecord}
    select(class="inner-pagination" pagination)
      -for(let i = 1; i<=pagination.totalPage; i++)
        option(value=i) Trang #{i}
  //- End Section 7