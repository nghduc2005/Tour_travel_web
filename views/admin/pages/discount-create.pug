extends ../layouts/default.pug
include ../mixins/options.pug
block main
  h1.box-title #{pageTitle}

  .section-8
    form#discount-create-form
      .inner-group
        label(class="inner-label" for="name") Tên mã giảm giá
        input(type="text" id="name" name="name")
      .inner-group
        label(class="inner-label" for="percent") Phần trăm giảm giá (0-100%)
        input(type="text" id="percent" name="percent")
      .inner-group
        label(class="inner-label" for="maximum") Lượng giảm tối đa (VND)
        input(type="text" id="maximum" name="maximum")
      .inner-group
        label(class="inner-label" for="status") Trạng thái
        select(id="status" name="status")
          option(value="active") Hoạt động
          option(value="inactive") Dừng hoạt động
      .inner-group
        label(class="inner-label" for="startDate") Ngày áp dụng
        input(type="date" id="startDate" name="startDate")
      .inner-group
        label(class="inner-label" for="endDate") Ngày hết hạn
        input(type="date" id="endDate" name="endDate")
      .inner-button.inner-two-col
        button Tạo mới
    .inner-back
      a(href=`/${pathAdmin}/discount/list`) Quay lại danh sách