extends ../layouts/default.pug
include ../mixins/options.pug
block main
  h1.box-title Danh sách bài viết

  //- Section 4
  .section-4
    .inner-wrap
      .inner-item.inner-label
        <i class="fa-solid fa-filter"></i> Bộ lọc
      .inner-item.inner-date
        input(type="date" filter-start-date)
        span -
        input(type="date" filter-end-date)
      .inner-item.inner-reset(filter-reset)
        <i class="fa-solid fa-rotate-left"></i> Xóa bộ lọc
  //- End Section 4

  //- Section 5
  .section-5
    .inner-wrap
      .inner-change-status(
        change-multi
        data-api=`/${pathAdmin}/article/change-multi`
      )
        .inner-item
          select
            option(value="") -- Hành động --
            option(value="delete") Xóa
        .inner-item
          button Áp dụng
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(type="text" placeholder="Tìm kiếm" search)
      .inner-button-create
        a(href=`/${pathAdmin}/article/create`)  + Tạo mới
  //- End Section 5

  //- Section 6
  .section-6
    .table-2
      table
        thead
          tr
            th(class="inner-center")
              input(type="checkbox" class="inner-check" check-all)
            th Tiêu đề
            th Tác giả
            th Ngày tạo
            th(class="inner-center") Hành động
        tbody
          each item in articleList
            tr
              td(class="inner-center")
                input(type="checkbox" class="inner-check" check-item=item.id)
              td #{item.title}
              td #{item.author}
              td #{item.createdAtFormat}
              td(class="inner-center")
                .inner-buttons
                  a(href=`/${pathAdmin}/article/edit/${item.id}`) <i class="fa-regular fa-pen-to-square"></i>                  
                  button(class="inner-delete"
                  button-delete
                  data-api=`/${pathAdmin}/article/delete/${item.id}`
                  ) <i class="fa-regular fa-trash-can"></i>
  //- End Section 6

  //- Section 7
  .section-7
    span(class="inner-label") Hiển thị #{pagination.skip+1} - #{pagination.skip+articleList.length} của #{pagination.totalRecord}
    select(class="inner-pagination" pagination)
      -for(let i = 1; i<=pagination.totalPage; i++)
        option(value=i) Trang #{i}
  //- End Section 7